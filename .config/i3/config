# screenlayout >> external 1920x1080 >> laptop >> 1920x1080

bindsym $mod+Ctrl+F1 exec ./.screenlayout/laptop_only.sh
bindsym $mod+Ctrl+F2 exec ./.screenlayout/both_dysplays.sh
bindsym $mod+Ctrl+F3 exec ./.screenlayout/external_only.sh

exec --no-startup-id ./.screenlayout/external_only.sh
exec --no-startup-id systemctl --user import-environment DISPLAY
exec --no-startup-id picom -b
exec --no-startup-id feh --bg-scale ~/.config/i3/wallx.jpg

exec --no-startup-id xsetroot -cursor_name left_ptr
exec --no-startup-id numlockx

exec --no-startup-id xrdb ~/.Xresources
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# sound
exec --no-startup-id start-pulseaudio-x11
exec --no-startup-id pasystray

# network manager
exec --no-startup-id nm-applet

## bluetooth applet
exec --no-startup-id blueman-applet

# misc
exec --no-startup-id xfce4-clipman


# print
bindsym Print exec --no-startup-id scrot
bindsym $mod+Print --release exec --no-startup-id scrot -w
bindsym $mod+Shift+Print --release exec --no-startup-id scrot -s
bindsym $mod+Ctrl+x --release exec --no-startup-id xkill

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

